#!/usr/bin/env bash

# Install native apps
run_apps() {
	brew install phinze/cask/brew-cask
	brew tap caskroom/versions
	
	## Security
	brew cask install sidestep
	brew install gpg keybase gpg-agent
	brew isntall tunnelblick

	# Browsers
	brew cask install firefox
	brew cask install google-chrome
	brew cask install google-chrome-canary
	brew cask install opera-developer
	brew cask install firefoxdeveloperedition

	## Text Editors
	brew cask install sublime-text
	brew cask install vscode
	brew cask install intellij-idea-community-eap
	brew cask install coda
	
	## Music + Media
	brew cask install spotify
	brew cask install sonos
	
	## File Sync + Transfer + Version Control
	brew cask install dropbox
	brew cask install transmit
	brew cask install github
	brew cask install gitx-rowanj
	brew cask install github-desktop
	brew cask install transmission

	brew cask install iterm2
	brew cask install mou

	brew cast install adobe-creative-cloud
	brew cask install docker-toolbox

	## Mac Tools + Productivity Helpers
	brew cask install 1password
	brew cask install alfred
	brew cask alfred link
	brew cask install caffeine
	brew cask install flux
	brew cask install grandperspective
	brew cask install spectacle
	brew cask install textexpander
	brew cask install apptrap
	brew cask install the-unarchiver
	brew cask install java
	brew cask install cocktail

	## Collab
	brew cask install teamviewer
	brew cask install slack	
	
	## Web Specific
	brew cask install ngrok
	brew cask install gas-mask
	brew cask install charles
	brew cask install dash
	brew cask install livereload
	brew cask install iterm2
	brew cask install vagrant
	brew cask install vagrant-manager
	brew install httpie

	# Image Optimizations
	brew cask install imagealpha
	brew install advancecomp
	brew cask install imageoptim
	brew install pngquant
	brew install pngcrush
	brew install jonof/kenutils/pngout
	brew install optipng
	brew install ffmpeg
	brew install imagemagick
	brew install graphicsmagick
	
	# Development
	echo Install Development tools
	brew install nano
	brew install subversion
	
	# Keyboard tweaks
	brew install karabiner
	brew install seil

	
}
